@article{putariarandom,
	abstract = {Accessibility of antigen receptor gene segments to recombination-activating gene (RAG), the V(D)J recombinase, is correlated with marks of active chromatin. One mark, histone H3 at lysine 4 (H3K4me3), binds to a plant homeodomain (PHD) in the RAG-2 subunit; mutations that abolish binding of the PHD to H3K4me3 also impair V(D)J recombination. Engagement of H3K4me3 by RAG-2 enhances substrate binding and catalysis, which are functions of RAG-1. We show that H3K4me3 acts through the PHD to induce conformational changes in an autoinhibitory domain residing within RAG-2 as well as in substrate-binding and catalytic regions of RAG-1. Our data suggest that H3K4me3 promotes displacement of the autoinhibitory domain as well as concomitant conformational alterations in RAG-1 that favor increased substrate affinity and catalytic rate.V(D)J recombination is initiated by the recombination-activating gene (RAG) recombinase, consisting of RAG-1 and RAG-2 subunits. The susceptibility of gene segments to cleavage by RAG is associated with histone modifications characteristic of active chromatin, including trimethylation of histone H3 at lysine 4 (H3K4me3). Binding of H3K4me3 by a plant homeodomain (PHD) in RAG-2 stimulates substrate binding and catalysis, which are functions of RAG-1. This has suggested an allosteric mechanism in which information regarding occupancy of the RAG-2 PHD is transmitted to RAG-1. To determine whether the conformational distribution of RAG is altered by H3K4me3, we mapped changes in solvent accessibility of cysteine thiols by differential isotopic chemical footprinting. Binding of H3K4me3 to the RAG-2 PHD induces conformational changes in RAG-1 within a DNA-binding domain and in the ZnH2 domain, which acts as a scaffold for the catalytic center. Thus, engagement of H3K4me3 by the RAG-2 PHD is associated with dynamic conformational changes in RAG-1, consistent with allosteric control by active chromatin.},
	author = {Bettridge, John and Na, Chan Hyun and Pandey, Akhilesh and Desiderio, Stephen},
	doi = {10.1073/pnas.1615727114},
	eprint = {https://www.pnas.org/content/114/8/1904.full.pdf},
	issn = {0027-8424},
	journal = {Proceedings of the National Academy of Sciences},
	number = {8},
	pages = {1904--1909},
	publisher = {National Academy of Sciences},
	title = {H3K4me3 induces allosteric conformational changes in the DNA-binding and catalytic regions of the V(D)J recombinase},
	url = {https://www.pnas.org/content/114/8/1904},
	volume = {114},
	year = {2017}
}

