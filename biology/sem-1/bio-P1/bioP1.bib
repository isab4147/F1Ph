	journal = {Cell},
	number = {3},
	pages = {387--395},
	title = {Cleavage at a V(D)J recombination signal requires only RAG1 and RAG2 proteins and occurs in two steps},
	url = {http://www.sciencedirect.com/science/article/pii/0092867495901167},
